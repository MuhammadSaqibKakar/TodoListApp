@model IEnumerable<TodoApp.Models.TodoItem>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="mb-4 text-center">My To-Do List</h1>

        <!-- Add Task Form -->
        <form asp-action="Create" method="post" class="d-flex mb-4">
            @Html.AntiForgeryToken()
            <input type="text" name="Title" class="form-control me-2" placeholder="Enter new task" required />
            <button type="submit" class="btn btn-primary">Add Task</button>
        </form>


        <!-- Task List -->
        <ul class="list-group">
        <div class="d-flex justify-content-between align-items-center mb-2">
    <p class="text-muted mb-0">Total tasks: @Model.Count()</p>
    <span class="badge bg-success">@Model.Count(t => t.IsCompleted) completed</span>
</div>

            @foreach (var item in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
                    <span class="@((item.IsCompleted) ? "text-decoration-line-through text-muted" : "")">
                        @item.Title
                    </span>

                    <br />
                    <small class="text-muted">@item.CreatedAt.ToString("g")</small>

                    <div>
                        <form asp-action="ToggleComplete" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-success me-1">
                                @((item.IsCompleted) ? "Undo" : "Complete")
                            </button>
                        </form>

                        <form asp-action="Delete" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </li>
            }
            
        </ul>
        <form asp-action="ClearCompleted" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-warning w-100">Clear Completed Tasks</button>
        </form>

    </div>
</div>